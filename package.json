{
  "name": "veritas-o",
  "version": "1.0.0",
  "description": "VeritasO: Judicial AI Agent System with Doctrinal Reflection",
  "main": "dist/system/main.js",
  "scripts": {
    "build:backend": "tsc -p tsconfig.backend.json",
    "start": "node dist/system/main.js",
    "dev:backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"cd frontend && npm run dev\"",
    "watch": "tsc --watch",
    "test": "jest",
    "typecheck:frontend": "tsc -p tsconfig.frontend.json",
    "typecheck:backend": "tsc -p tsconfig.backend.json --noEmit",
    "typecheck": "npm run typecheck:frontend && npm run typecheck:backend",
    "watch:backend": "tsc -p tsconfig.backend.json --watch",
    "seed:expansion": "tsx backend/src/scripts/seedExpansion.ts",
    "seed:load": "tsx server/scripts/loadSeeds.ts",
    "actor:tribunal:run": "cd veritas-tribunal && OPENAI_API_KEY=$OPENAI_API_KEY apify run --input '{\"caseNarrative\":\"Two students fought...\"}'",
    "actor:tribunal:push": "cd veritas-tribunal && apify push",
    "boot": "node veritas_boot.js",
    "mock-peers:start": "./scripts/mock_peers_ctl.sh start",
    "mock-peers:stop": "./scripts/mock_peers_ctl.sh stop",
    "mock-peers:status": "./scripts/mock_peers_ctl.sh status",
    "audit": "npm run mock-peers:start && npm run boot"
  },
  "dependencies": {
    "apify": "^3.4.4",
    "autoprefixer": "^10.4.21",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.44.4",
    "node-cron": "^4.2.1",
    "openai": "^5.12.2",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^7.6.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "ai",
    "judicial",
    "doctrine",
    "reflection",
    "agents"
  ],
  "author": "VeritasO",
  "license": "MIT"
}

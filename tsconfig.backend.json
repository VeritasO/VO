{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./backend/src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": ["backend/src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
